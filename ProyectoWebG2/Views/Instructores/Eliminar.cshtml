@model ProyectoWebG2.Models.InstructorListadoVM
@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Eliminar Instructor";
}

<h2 class="mb-4">Eliminar Instructor</h2>
<p>¿Estás seguro de que deseas eliminar al instructor <strong>@Model.NombreCompleto</strong>?</p>
<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Cédula</dt>
            <dd class="col-sm-9">@Model.Cedula</dd>
            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>
            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>
            <dt class="col-sm-3">Cursos asignados</dt>
            <dd class="col-sm-9">@Model.CursosAsignados</dd>
        </dl>
    </div>
</div>
<form asp-action="EliminarConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="IdInstructor" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
